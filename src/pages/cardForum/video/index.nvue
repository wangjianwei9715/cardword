                        findItem.likes = res.likes;
                    } else {
                        findItem.favorite = res.favorite;
                        findItem.isFavorite = res.isFavorite;
                    }
                    findItem.comment = res.comment
                }
            }
        });
        uni.$on('resetLoadmore', () => {
