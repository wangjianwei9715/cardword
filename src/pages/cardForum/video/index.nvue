        this.get()//Ëøô‰∏ÄÊ≠•ÔºåÂä†ËΩΩËßÜÈ¢ëÊï∞ÊçÆ

        uni.$on("informationChange", (res) => {
            if (res && res.code) {
                let findItem = this.dataList.find((item) => {
                    return item.code == res.code;
                });
                if (findItem) {
