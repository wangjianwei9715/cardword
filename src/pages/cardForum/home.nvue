    components: {
        waterfalls,
        cardSkeleton
    },
    data() {
        return {
            app,
            actionsList,
            actionSheet: false,
            firstReqEnd: false,
            initFinish: false,
            searchText: "",
            navHeight: 0,
            tabsHeight: 0,
            scrollViewHeight: 0,
            fixedTopHeight: 0,
            hotTopics: [],
            dx: 0,
            tabs: {
                index: 2,
                list: []
            },
            trTimmer: null
        }
    },
    async onLoad() {
        this.$nextTick(async () => {
            this.fixedTopHeight = await this.getDomHeight("#fixedTop")
            // console.log(await this.getDomHeight("#tabs"));
            // this.scrollViewHeight = app.platform.systemInfo.screenHeight - this.fixedTopHeight - (uni.getSystemInfoSync().screenHeight - uni.getSystemInfoSync().safeArea.bottom)
            // #ifdef APP-NVUE
            this.scrollViewHeight = app.platform.systemInfo.screenHeight - this.fixedTopHeight - plus.navigator.getSafeAreaInsets().deviceBottom - 56
            // console.log(uni.getSystemInfoSync());
            // console.log(plus.navigator.getSafeAreaInsets());
            // console.log("app.platform.systemInfo.screenHeight:", app.platform.systemInfo.screenHeight);
            // console.log("this.fixedTopHeight:", this.fixedTopHeight);
            // console.log("uni.getSystemInfoSync().safeArea.bottom", uni.getSystemInfoSync().safeArea.bottom);
            // console.log("tabbarHeight:", uni.getSystemInfoSync().screenHeight - uni.getSystemInfoSync().safeArea.bottom);
            // console.log("this.scrollViewHeight:", this.scrollViewHeight);
            // #endif
            // #ifdef H5
            this.scrollViewHeight = 666
            // #endif
        })
        await this.initTab()
        this.reqNewData(true)
    },
    computed: {
        current() {
            return this.tabs.list[this.tabs.index]
        },
        isShowKa() {
            return this.tabs.index === 2
        },
        navOpacity() {
            // return 1
            if (this.tabs.index <= 1) {
                return (app.platform.systemInfo.screenWidth - this.dx) / app.platform.systemInfo.screenWidth
            }
            if (this.isShowKa) {
                if (this.dx <= app.platform.systemInfo.screenWidth && this.dx >= app.platform.systemInfo.screenWidth - 30) return 0
                console.log((Math.abs(this.dx)) / app.platform.systemInfo.screenWidth);
                return (Math.abs(this.dx)) / app.platform.systemInfo.screenWidth
            }
            if (this.tabs.index > 2 && this.dx < 0) {
                return (app.platform.systemInfo.screenWidth - Math.abs(this.dx)) / app.platform.systemInfo.screenWidth
            } else {
                return 1
            }

        }

    },
    watch: {
        'tabs.index': function (val) {
            if (this.tabs.list[val].list.length == 0) {
                this.reqNewData(true)
            }
            if (val == 2) {
                // uni.setTabBarStyle({
                //     backgroundColor: "#0c0014"
                // })
                uni.hideTabBar({
                    animation: true
                })
                // #ifdef APP-NVUE
                plus.navigator.setStatusBarStyle("light");
                // #endif
                this.getTopicsList()
            } else {
                uni.showTabBar({ animation: true })
                // #ifdef APP-NVUE
                plus.navigator.setStatusBarStyle("dark");
                // #endif
                // uni.setTabBarStyle({
                //     backgroundColor: "#ffffff"
                // }) 
            }
        }
    },
    methods: {
        async initTab() {
            tabsList.forEach((item, index) => {
                const deepData = JSON.parse(JSON.stringify(defaultTagObj))
                this.$set(this.tabs.list, index, { ...deepData, ...item })
            })
            this.initFinish = true
            return
        },
        getTopicsList() {
        },
        pageJump(url) {
            uni.navigateTo({
                url
            })
        },
        getDomHeight(dom) {
            return new Promise((re, rj) => {
                uni.createSelectorQuery()
                    .select(dom)
                    .boundingClientRect((rect) => {
                        if (rect) {
                            re && re(rect.height)
                        }
                    })
                    .exec();
            })
        },
        goToDetail(item) {
            uni.navigateTo({
                url: "/pages/cardForum/detail?code=" + item.code
            })
        },
        clearSeach() {
            this.current.queryParams.q = ""
        },
        swiperChange(event) {
            console.log("swiperChangeChange了了了");
            this.dx = 0
            this.tabs.index = event.detail.current
        },
        transitionend(event) {
            console.log("66666666", event);
        },
        swiperChangeAnimationfinish(event) {
            // console.log("动画结束", event);
            // this.tabs.index = event.detail.current
        },
        swipertouchmove(event) {
            // console.log("swipertouchmove",event);
        },
        swiperTransition(event) {
            // console.log("swiperTransition", event,app.platform.systemInfo.screenWidth);
            // console.log("swiperTransition", event.detail.dx);
            this.dx = event.detail.dx
        },
        tabClick(event) {
            // console.log(event);
            if (event.index == this.tabs.index) return
            this.tabs.index = event.index
        },
        onSelectAction(item) {
            if (item.url) {
                uni.navigateTo({
                    url: item.url
                })
            }
        },
        refreshData(index) {
            this.reqNewData(true)
            setTimeout(() => {
                this.$refs['waterfalls' + index][0].hideRefresh()
            }, 500);
        },
        loadmoreData(index) {
            const nowTab = this.tabs.list[index]
            if (!nowTab.isFetchEnd) this.reqNewData()
        },
        reqNewData(isRefresh = false, cb) {
            this.current.firstReqEnd = false
            if (isRefresh) this.current.list = []
            this.current.list.push(...mockList)
            this.current.firstReqEnd = true
            cb && cb()
            return
            const query = this.current.queryParams
            app.http.Get("/dataApi", query, (res) => {
                this.current.firstReqEnd = true
                cb && cb()
            }, (err) => {
                this.current.firstReqEnd = true
            })
        }
    }
}
</script>
