{ title: "这是表踢踢踢踢踢", desc: "描述描述还是输", image: 'https://images.cardhobby.com/9740T20210822233025348.jpg?imageView2/2/w/200' },]
const actionsList = [
    {
        name: "动态",
        url: "/pages/cardForum/release"
    }, {
        name: "卡册",
        subname: "制作图片对应卡种的高质量卡册，适用于凑套等"
    }
]
const tabsList = [
    {
        name: '关注',
    }, {
        name: '推荐',

    }, {
        name: 'SHOW卡',

    }, {
        name: '视频',

    }, {
