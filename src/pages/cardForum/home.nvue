    {
        name: "动态",
        url: "/pages/cardForum/release"
    }, {
        name: "卡册",
        subname: "制作图片对应卡种的高质量卡册，适用于凑套等"
    }
]
const tabsList = [
    {
        name: '关注',
    }, {
        name: '推荐',

    }, {
        name: 'SHOW卡',

    }, {
        name: '视频',

    }, {
        name: '卡册',

    }, {
        name: '交流',

    }, {
        name: '篮球',

    }
]
const app = getApp().globalData.app;
const defaultTagObj = {
    // queryParams: {
    //     pageIndex: 1,
    //     pageSize: 15,
    //     q: ""
    // },
    // totalPage: 10,
    isFetchEnd: true,
    firstReqEnd: false,
    list: []
}
