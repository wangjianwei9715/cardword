{
	"pages": [ 
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle":"custom",
				"enablePullDownRefresh":true
			}
		}
		,{
		    "path" : "pages/index/circle",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "圈子",
		        "enablePullDownRefresh": false
		    }
		    
		}
		,{
		    "path" : "pages/index/message",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "消息",
		        "enablePullDownRefresh": false,
				"navigationBarBackgroundColor":"#fff"
		    }
		}
		,{
		    "path" : "pages/index/userinfo",
		    "style" :                                                                                    
		    {
		        "navigationStyle":"custom",
		        "enablePullDownRefresh": true
		    }
		}
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#888888",
	    "selectedColor": "#0A0C0C",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
		"fontSize":"12px",
		"height":"50px",
		"spacing":"4px",
		"iconWidth":"17px",
	    "list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/index/tabbar_0_.png",
				"selectedIconPath": "static/index/tabbar_0.png",
				"text": "集潮"
			}, {
				"pagePath": "pages/index/circle",
				"iconPath": "static/index/tabbar_1_.png",
				"selectedIconPath": "static/index/tabbar_1.png",
				"text": "圈子"
			}, {
				"pagePath": "pages/index/message",
				"iconPath": "static/index/tabbar_3_.png",
				"selectedIconPath": "static/index/tabbar_3.png",
				"text": "消息"
			}, {
				"pagePath": "pages/index/userinfo",
				"iconPath": "static/index/tabbar_4_.png",
				"selectedIconPath": "static/index/tabbar_4.png",
				"text": "我的"
			}
		],
		"midButton":{
			"width":"60px",
			"height":"42px",
			"iconPath":"static/index/tabbar_2.png",
			"iconWidth":"34px"
		}
	},
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@/components/uni-$1.vue"
		}
	}
}
